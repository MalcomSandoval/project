---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import VentaForm from '../components/VentaForm.svelte';
---

<DashboardLayout title="Ventas" currentPage="/ventas">
  <div class="space-y-6">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-bold text-bavarian-blue">Gestión de Ventas</h1>
    </div>
    
    <VentaForm client:load />
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-bavarian-blue mb-4">Ventas Recientes</h3>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-2 text-left">Fecha</th>
              <th class="px-4 py-2 text-left">Total</th>
              <th class="px-4 py-2 text-left">Método</th>
              <th class="px-4 py-2 text-left">Usuario</th>
            </tr>
          </thead>
          <tbody id="ventas-list">
            <tr>
              <td colspan="4" class="px-4 py-8 text-center text-gray-500">
                Cargando ventas...
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</DashboardLayout>

<script>
  import { ventas } from '../services/supabase.js';
  
  const cargarVentas = async () => {
    try {
      const result = await ventas.getAll();
      const tbody = document.getElementById('ventas-list');
      
      if (result.data && result.data.length > 0) {
        tbody.innerHTML = result.data.map(venta => `
          <tr class="border-t">
            <td class="px-4 py-2">${new Date(venta.fecha_venta).toLocaleDateString()}</td>
            <td class="px-4 py-2">$${parseFloat(venta.total).toFixed(2)}</td>
            <td class="px-4 py-2">${venta.metodo_pago}</td>
            <td class="px-4 py-2">${venta.usuario_id}</td>
          </tr>
        `).join('');
      } else {
        tbody.innerHTML = `
          <tr>
            <td colspan="4" class="px-4 py-8 text-center text-gray-500">
              No hay ventas registradas
            </td>
          </tr>
        `;
      }
    } catch (error) {
      console.error('Error cargando ventas:', error);
    }
  };
  
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', cargarVentas);
  }
</script>
</DashboardLayout>